<% provide :page_title, "Questions" %>
<% currently_at 'Questions'%>
<h1>Questions</h1>
<%= link_to 'new', new_question_path, class: "btn btn-primary btn-lg mb-5" %>
<% @questions.each do |question| %>
  <article class="card mb-4">
    <div class="card-body">
      <h4><%= question.title %></h4>
      <p class="my-2">  
        <%= question.body %><br>
        <%= link_to 'show', question_path(question), class: "btn btn-primary" %>
        <%= link_to 'edit', edit_question_path(question), class: "btn btn-secondary" %>
        <%= button_to "Delete", question_path(question), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </p>
    </div>
  </article>
<% end %>
