<% provide :page_title, "Question" %>
<% currently_at 'Question'%>
<h1 class="mb-4"><%= @question.title %></h1>

<h3>Question</h3>
<hr>
<p class="lead my-3">
  <%= @question.body %><br>
  <%= link_to 'edit', edit_question_path(@question), class: "btn btn-secondary" %>
  <%= button_to "Delete", question_path(@question), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</p>
<hr class="my-3">
<h2>коментировать:</h2>
<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-from-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control"  %>
    </div>
  </div>
  <%= f.submit 'добавить коментарий', class: "btn btn-primary" %>
<% end %>

<h2 class="mt-5">комментарии</h2>
<% @answers.each do |answer|%>
  <article class="mb-3">
  <p>
    <%= answer.body %>
  </p>
  <%= link_to "edit", edit_question_answer_path(@question, answer), method: :get, class: "btn btn-secondary mb-4" %>
  <%= button_to "delete", question_answer_path(@question, answer), method: :delete, class: "btn btn-danger", data: { confirm: "вы уверены?" } %>
  </article>
<% end %>
