  <h2 class="mb-3">редактирование коментария</h2>
  <%= form_with model: [@question, @answer] do |a| %>
    <div class="mb-3 row">
      <%= a.label :body, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= a.text_area :body, required: true, minlength: 2, placeholder: "Body", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= a.submit "Update Answer", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
