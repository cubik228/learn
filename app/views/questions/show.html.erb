<% provide :page_title, "Question" %>
<% currently_at 'Question' %>
<h1 class="mb-4"><%= @question.title %></h1>

<h3>Question</h3>
<hr>
<div class="lead my-3 ">
  <%= sanitize @question.body %><br>  
  <%= link_to 'edit', edit_question_path(@question, @answer), class: "btn btn-secondary" %>
  <%= button_to "Delete", question_path(@question, @answer), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
<hr class="my-3">
<h2>комментировать:</h2>
<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-from-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control"  %>
    </div>
  </div>
  <%= f.submit 'добавить комментарий', class: "btn btn-primary" %>
<% end %>

<h2 class="mt-5">комментарии</h2>
<%= render partial: 'answers/answer',collection: @answers ,as: :answer ,locals: {question: @question} %>
